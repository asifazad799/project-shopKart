                                catDataCount.push(val.count)

                            })

                            //console.log(catDataLabel)
                            //console.log(catDataCount)

                            response.paymentMethod.map((value)=>{
                                
                               paymentMethod.push(value.count) 

                            })

                            //console.log(paymentMethod)

                            response.perDaySales.map((val)=>{
                            
                                data1.push({x:val._id,y:val.count})

                            })

                            const data = {
                                //labels: date,
                                datasets: [{
                                    label: 'Weekly Sales',
                                    data: data1,
                                    backgroundColor:'#03039c',
                                    borderColor:'#03039c',
                                    borderWidth: 1,
                                    
                                    
                                }]
                                };

                                // config 
                                const config = {
                                type: 'bar',
                                data,
                                options: {
                                    scales: {
                                        xAxes: [{
                                            "type": "time",
                                            "display": true,
                                            
                                           
                                            
                                            "scaleLabel": {
                                                "display": true,
                                                "labelString": "days",
                                                "fontColor": "red"
                                            },
                                            "time": {
                                                "unit": "day",
                                                // "parser": "moment.ISO_8601", -> remove this line
