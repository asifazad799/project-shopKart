                $( document ).ready(function() {

                     $('#bestProd').DataTable(); 

                    //console.log( "ready!" );

                    $.ajax({

                        url:'/admin/getSalesTable',
                        method:'get',
                        success:(response)=>{
                            
                            let data1 = []
                            let paymentMethod = []
                            let catDataLabel = []
                            let catDataCount = []

                            response.catData.map((val)=>{
                                
