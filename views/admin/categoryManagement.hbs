     
  


        
     <div class="container" style="font-size: 14px;" >
            <h1 class="text-center">catergory Management</h1>

            <section class="mt-0 pt-0 d-flex justify-content-center loginForm" >
        <div class="container cl-10 col-sm-8 col-md-6 col-lg-5 pt-0 mt-4">
            <div class="row pb-2 p-5" style="background-color: rgb(222, 221, 221); border-radius: 6px;">
                <form class="pt-0" id="add-category" action="/admin/addNewCategory" method="POST">
                
                   <h3 class="text-center loginTitle">Add new category</h3>
                   {{#if Err}}
                   <p  class="text-danger text-center mt-1">{{Err}}</p>
                   {{/if}}
                   <div class="">
                        <label class="form-label">Catagory</label>
                        <input type="text" class="form-control"  name="category" >
                        {{!-- <div id="emailHelp" class="form-text">We'll never share your data with anyone else.</div> --}}
                    </div>
                    <div class="">
                        <label  class="form-label">Sub Category</label>
                        <input type="text" class="form-control"  name="subcategory">
                    </div>
                    <div class="cl-lg-4 text-center mb-0">
                        <button type="submit" class="btn btn-primary loginFormButton">Add</button>
                    </div>
                </form>
                
            </div>
        </div>
    </section>

    <div class="col-12 p-4 mt-4" style="background-color: rgb(222, 221, 221); border-radius:4px">

    
    <table id="categoryTable" class="table table-striped text-center" style="width:100%; font-size:15px !important;">
        <thead style="font-size: 15px;">
            <tr >
                <th>Index</th>
                <th>Catergory</th>
                <th>Sub Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each catData}}
        <tr>
            <td>{{@index}}</td>
            <td>{{this.category}}</td>
            
            
            <td>
                <ul>
                {{#each subcategory}}

            
               
                   <li>{{this}}
                       <a href="/admin/delete-subcategory?category={{../this.category}}&subcategory={{this}}"><i class="fas fa-trash text-danger"></i></a>
                   </li>

               
                

                {{/each}}
                </ul>
                
            </td>
            <td>

                 <a href="/admin/delete-category?category={{this.category}}"><i class="fas fa-trash text-danger"></i></a>

            </td>
            
            
        </tr>
        {{/each}}
        </tbody>
        
        

    </table>
    </div>
   
    </div>
    </div>
    
</main>
    

   
        
        
       


