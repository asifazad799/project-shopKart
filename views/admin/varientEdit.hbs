 <div class="container" style="font-size: 14px;" >
            <h3 class="text-center">Edit Product Varient</h3>

            <section class="mt-0 pt-0 d-flex justify-content-center loginForm" >
        <div class="container cl-10 col-sm-8 col-md-6 col-lg-10 pt-0 mt-4">
            <div class="row pb-2 p-5"style="background-color:  #eeeeee; border-radius: 6px; box-shadow:  0px 0px 20px 2px  rgb(187, 187, 187);">
                {{#if varientData}}
                <form class="pt-0" enctype="multipart/form-data" id="updateVarientProduct" onsubmit="return submitForm(this)"   action="/admin/editVarients?varientId={{varientData._id}}&productId={{productId}}" method="POST">
                
                   <h4 class="text-center loginTitle mb-2">Product:<span class="text-dark fs-5">{{product}}</span></h4>
                    {{#if productErr}}
                    <p  class="text-danger text-center mt-1">{{productErr}}</p>
                    {{/if}}
      
                    
                    
                    
                    <input type="text" id="subcategory" value="{{subcategory}}" hidden >
                    <div class="row">
                        <p>Selected Size:{{varientData.size}}</p>
                        <div class="col-3 ">
                            <label class="">Select Size</label>
                            <select class="form-select" style="padding: 6px;" name="size" id="Psizes">
                                <option selected value=""></option>
                                
                                
                            </select>

                        </div>
                        <div class="col-2">

                            <label class="">Color</label>
                            <input type="text" class="form-control" value="{{varientData.color}}"  name="color" >

                        </div>
                        <div class="col-5">
                            <div class="row">

                            <div class="col-8">

                            <label class="" >landing cost</label>
                            <input type="text" class="form-control" value="{{varientData.landingcost}}"  name="landingcost" >
                            </div>
                            <div class="col-4">

                                <label class="">MRP</label>
                                <input type="text" class="form-control"  value="{{varientData.mrp}}"  name="mrp" >

                            </div>
                            </div>

                        </div>
                        <div class="col-2">

                            <label class="">Quantity</label>
                            <input type="text" class="form-control" value="{{varientData.quantity}}"  name="quantity" >

                        </div>


                    </div>

                    <div class="row"> 
                        <div class="col-lg-4 text-center">

                            <div class="mt-5">
                            <label for="" style="font-weight: 700;">Image 1</label>
                            <div class="col-12">
                            <div id="image-box" style="width: 250px; height: 250px; display: none;"></div>
                            <button class="btn btn-primary mt-3" type="button" style="display: none;"
                                id="crop-btn">Crop</button>
                            </div>

                            <img src="http://18.216.136.74/images/product/productvarients/{{varientData._id}}_1.jpg" alt="" style="width: 100px; height:auto ; " id="imgview1">
                            {{!-- <div id="preview1"></div> --}}
                            <input type="file" name="image1" id="file1" style="padding-top: 5.7px;" class="form-control mt-3"
                                onchange="return fileValidation1()">
                            </div>  

                        </div>
                        <div class="col-lg-4 text-center">

                            <div class="mt-5">
                            <label for="form-label" style="font-weight: 700;">Image 2</label>
                            <div class="col-12">
                            <div id="image-box2" style="width: 250px; height: 250px; display: none;"></div>
                            <button class="btn btn-primary mt-3" type="button" style="display: none;"
                                id="crop-btn2">Crop</button>
                            </div>

                            <img src="http://18.216.136.74/images/product/productvarients/{{varientData._id}}_2.jpg" alt="" style="width: 100px; height:auto ; " id="imgview2">
                            {{!-- <div id="preview1"></div> --}}
                            <input type="file" name="image2" id="file2" style="padding-top: 5.7px;" class="form-control mt-3"
                                onchange="return fileValidation2()">
                            </div>
                        </div>

                        <div class="col-lg-4 text-center">

                            <div class="mt-5">
                            <label for="form-label" style="font-weight: 700;">Image 3</label>
                            <div class="col-12">
                            <div id="image-box3" style="width: 250px; height: 250px; display: none;"></div>
                            <button class="btn btn-primary mt-3" type="button" style="display: none;"
                                id="crop-btn3">Crop</button>
                            </div>

                            <img src="http://18.216.136.74/images/product/productvarients/{{varientData._id}}_3.jpg" alt="" style="width: 100px; height:auto ; " id="imgview3">
                            {{!-- <div id="preview1"></div> --}}
                            <input type="file" name="image3" id="file3" style="padding-top: 5.7px;" class="form-control mt-3"
                                onchange="return fileValidation3()">
                            </div>
                        </div>
                         

                    </div>
                    <div class="row">

                        <div class="col-12  d-flex justify-content-center">

                        <div class="col-4 text-center">
                           


                            <div class="mt-5">
                            <label for="form-label" style="font-weight: 700;">Image 4</label>
                            <div class="col-12">
                            <div id="image-box4" style="width: 250px; height: 250px; display: none;"></div>
                            <button class="btn btn-primary mt-3" type="button" style="display: none;"
                                id="crop-btn4">Crop</button>
                            </div>

                            <img src="http://18.216.136.74/images/product/productvarients/{{varientData._id}}_4.jpg" alt="" style="width: 100px; height:auto ; " id="imgview4">
                            {{!-- <div id="preview1"></div> --}}
                            <input type="file" name="image4" id="file4" style="padding-top: 5.7px;" class="form-control mt-3"
                                onchange="return fileValidation4()">
                            </div>
                            

                        </div>
                        </div>

                            


                    </div>
                    <div class="row">

                        <div class="cl-lg-4 text-center mb-0 d-flex justify-content-center">
                            <button id="confirm-btn" type="submit" class="btn btn-primary " style="background-color: blue; margin-top:20px; width: 80px">Add</button>
                        </div>
                    </div>
                </form>
                {{/if}}
                
            </div>
        </div>
    </section>

   
   
    </div>
    </div>
    
