        <div class="bg-lighter pt-5 pb-5 mb-5">
          <div class="container">
            <div class="heading text-center mb-4">
              <h2 class="title">Recent Arrivals</h2>
              <!-- End .title -->
              <p class="title-desc">Aliquam tincidunt mauris eurisus</p>
              <!-- End .title-desc -->
            </div>
            <!-- End .heading -->
            <div class="owl-carousel owl-simple carousel-equal-height carousel-with-shadow" data-toggle="owl" 
                        data-owl-options='{
                            "nav": false, 
                            "dots": true,
                            "margin": 20,
                            "loop": false,
                            "responsive": {
                                "0": {
                                    "items":1
                                },
                                "480": {
                                    "items":2
                                },
                                "768": {
                                    "items":3
                                },
                                "992": {
                                    "items":4
                                },
                                "1200": {
                                    "items":4,
                                    "nav": true,
                                    "dots": false
                                }
                            }
                        }'>
                        {{#each products}}
                        <div class="product product-7 text-center" style="background-color: #f9f9fa; border-radius:2px; box-shadow:  0px 0px 19px 3px  rgb(220, 220, 220)">
                            <figure class="product-media">

                                  {{#if this.productVarients.oldProPrice}}
                                  <span class="product-label label-new" style="background-color: red !important; border-radius: 2px;">Special Offer</span>
                                  {{else}}
                                  {{#if this.productVarients.oldCatPrice}}
                                  <span class="product-label label-new" style="background-color: red !important; border-radius: 2px;">New Offer</span>
                                  {{/if}}
                                {{/if}}
                                <a href="/productDetails?productVerientId={{this.productVarients._id}}">
                                    <img src="/images/product/productvarients/{{this.productVarients._id}}_1.png" alt="Product image" class="product-image">
                                </a>
                                <div class="product-action-vertical">
                                   
                                      <a  onclick="addToWishlist('{{this.productVarients._id}}')" class="btn-product-icon btn-wishlist btn-expandable"><span style="background-color: blue !important;">Add to wishlist</span></a>


                                   
                                    {{!-- <a href="popup/quickView.html" class="btn-product-icon btn-quickview" title="Quick view"><span>Quick view</span></a>
                                    <a href="#" class="btn-product-icon btn-compare" title="Compare"><span>Compare</span></a> --}}
                                </div><!-- End .product-action-vertical -->
                             

                                <div class="product-action">
                                  {{#if ../currentUser}}
                                  
                                  <a  onclick="addToCart('{{this.productVarients._id}}','{{this.productVarients.mrp}}')" class="btn-product"><span>add to cart</span></a>
                                 
                                  {{else}}
                                  <a href="/userLogin" class="btn-product"><span>add to cart</span></a>
                                  {{/if}}
                                  
                                  
                                </div><!-- End .product-action -->
                            </figure><!-- End .product-media -->

                            <div class="product-body" style="background-color: #f9f9fa; ">
                                <div class="product-cat">
                                    <a href="#">{{this.brand}}</a>
                                </div><!-- End .product-cat -->
                                <div class="product-cat">
                                    <a href="#">{{this.productName}}</a>
                                </div>
                                <h3 class="product-title"><a href="product.html">{{this.category}}</a></h3><!-- End .product-title -->
                               
                                  {{#if this.productVarients.oldProPrice}}
                                  <div class="product-price" style="color: blue;">
                                      ₹{{this.productVarients.mrp}}
                                  </div>
                                  <div class="product-price" style="color: blue;">
                                      <s style="text-decoration-thickness: 2px;">₹{{this.productVarients.oldProPrice}}</s>
                                  </div><!-- End .product-price -->

                                  {{else}}
                                  {{#if this.productVarients.oldCatPrice}}
                                  <div class="product-price" style="color: blue;">
                                      ₹{{this.productVarients.mrp}}
                                  </div>
                                  <div class="product-price" style="color: blue;">
                                      <s style="text-decoration-thickness: 2px;">₹{{this.productVarients.oldCatPrice}}</s>
                                  </div><!-- End .product-price -->
                                  {{else}}
                                  <div class="product-price" style="color: blue;">
                                      ₹{{this.productVarients.mrp}}
                                  </div>
                                  {{/if}}
                                  {{/if}}
                             
            
                            </div><!-- End .product-body -->
                        </div><!-- End .product -->
                        {{/each}}
                     
                    </div>
            

          
            <!-- End .owl-carousel -->
