<section class="mt-0 pt-0 d-flex justify-content-center loginForm mt-5 pt-5" >
        <div class="container cl-10 col-sm-8 col-md-6 col-lg-3 pt-5 mt-5">
            <div class="row pb-2 p-5" style="background-color:  #eeeeee; border-radius: 6px; box-shadow:  0px 0px 20px 2px  rgb(187, 187, 187);">
                <form class="pt-0" id="changePassword" onsubmit="return resetPasswordConfirmation(this)" action="/ResetPassword" method="POST">
                   <h3 class="text-center loginTitle mb-2">New Password</h3>
                   {{#if loginERR}}
                   <p  class="text-danger text-center mt-1">{{loginERR}}</p>
                   {{/if}}
                   <div class="">
                       
                        <label class="form-label">Enter new password</label>
                        <input type="password" class="form-control" value="123456789" id="password" name="password" aria-describedby="emailHelp">
                        
                    </div>
                    <div class="">
                        <label  class="form-label">Confirm entered password</label>
                        <input type="password" class="form-control" value="123456789" name="confirmPassword">
                    </div>
                    <div class="cl-lg-4 text-center mb-1 mt-3">
                        <button type="submit" class="btn btn-primary loginFormButton">Reset</button>
                    </div>
                </form>
                
            </div>
        </div>
    </section>
   